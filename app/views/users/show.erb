<% if flash.has?(:message) %>
  <%= flash[:message] %>
  <% end %>

  <table>
    <tr>
      <th>Book Id</th>
      <th>By</th>
      <th>Title</th>
      <th>Author</th>
      <th>View</th>
    </tr>

    <% @user.books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= @user.username %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><a href="/books/<%= book.id %>">View</a></td>
      </tr>
    <% end %>
  <table>

  <br></br>

  <!-- Create New Book -->
  <form action="/books/new" method="GET">
    <input type="submit" value="New Book">
  </form>

  <!-- Log Out -->
  <form action="/logout" method="GET">
    <input type="submit" id="logout" value="Log Out">
  </form>
