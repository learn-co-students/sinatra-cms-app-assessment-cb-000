<h1>Welcome, <%=@user.username%> to BookBuddy!</h1>

<h3>Books:</h3>
<% if flash.has?(:message) %>
<%= flash[:message] %>
<% end %>

<table>
  <tr>
    <th>Posted By</th>
    <th>Title</th>
    <th>Author</th>
    <th>View</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%=book.user.username%></td>
      <td><%=book.title%></td>
      <td><%=book.author%></td>
      <td><%=book.title%></td>
      <td><a href="/books/<%=book.id%>">View</a></td>
    </tr>
    <% end %>

</table>

<br><br>

<!-- Link to Create a New Book -->
<form action="/books/new" method="get">
  <input type="submit" id="submit" value="New Book">
</form>

<!-- Link to Log Out -->
<form action="/logout" method="get">
  <input type="submit" id="submit" value="Log Out">
</form>
