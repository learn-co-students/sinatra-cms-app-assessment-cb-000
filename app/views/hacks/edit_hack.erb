<h3>Edit Hack</h3>

<form method="post" action="/hacks/<%= @hack.id %>">
  Title: <input type="text" name="title" id="title" value="<%= @hack.title %>"><br>
  Description: <input type="text" name="description" id="description" value="<%= @hack.description %>"><br>
  Video ID: <input type="text" name="vid_id" id="vid_id" value="<%= @hack.vid_id %>"><br>
<input type="submit" id="submit" name="submit" value="submit">
</form>
